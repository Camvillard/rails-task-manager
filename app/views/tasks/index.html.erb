<div id="all-tasks">

  <div id="header">
    <h3>il est temps de se sortir les doigts du cul</h3>
    <h5>voici tout ce que tu dois faire aujourd'hui</h5>
  </div>

  <div id="tasks">
    <ul>
      <% @tasks.each do |task| %>
      <li>

        <%= link_to task_done_path(task.id), method: :patch do %>
          <% if task.completed %>
          <i class="far fa-check-square"></i>
          <% else %>
          <i class="far fa-square"></i>
          <% end %>
        <% end %>

        <%= link_to task.title, task_path(task.id)  %>

      </li>
      <% end %>
    </ul>
  </div>

  <div id="new-task">
    <%= link_to 'add a new task', tasks_new_path %>
  </div>

</div>

<div id="footer">
  <p>tasks manager created with mucho <i class="fas fa-heart"></i></p>
</div>
